@model FaceRecognition.Web.Models.PersonViewModel 
@{
    ViewData["Title"] = "People";
}

<h1 class="text-center">Add a Person</h1>  
<form asp-action="Create" method="post">
   <div class="form-group">
      <label asp-for="Name" class="col-md-2 control-label"></label>
      <div class="col-md-10">
         <input asp-for="Name" class="form-control" />
         <span asp-validation-for="Name" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group">
      <label asp-for="Description" class="col-md-2 control-label"></label>
      <div class="col-md-10">
         <input asp-for="Description" class="form-control" />
         <span asp-validation-for="Description" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group">
      <label asp-for="ImageUrl" class="col-md-2 control-label">Image Url</label>
      <div class="col-md-10">
         <input asp-for="ImageUrl" class="form-control" />
         <span asp-validation-for="ImageUrl" class="text-danger"></span>
      </div>
   </div> 

   <div asp-validation-summary="ModelOnly" class="text-danger"></div>

   @if(TempData["Message"] != null)
   {           
      <div class="alert alert-success col-md-6" style="margin-left: 15px;">
         <strong>Success</strong> - Person added correctly
      </div>
   }

   <div style="padding-left: 15px;"> 
      <input type="submit" class="btn btn-primary btn-lg" value = "Save" /> 
      <a class="btn btn-warning btn-lg" asp-area="" asp-controller="Home" asp-action="Index">Cancel</a>
   </div> 
</form>